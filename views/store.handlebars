<!-- STORE -->
<section id="store">

<div class="container">
    <h1>Store</h1>
    <form action="/store-word" method="POST">
        <input type="text" class="col-xs-11" id="search-bar" placeholder="Search product by name..." name="search">
        <button class="btn btn-secondary col-xs-1" type="submit"><i class="fa fa-search"></i></button>
    </form>
</div>

<div class="container">
    <div class="submenu">
        <form action="/store-type" method="POST">
            <button class="submenu-button col-xs-2" type="submit" name="typeSearch" value="All">All</button>
            <button class="submenu-button col-xs-2" type="submit" name="typeSearch" value="Mask">Mask</button>
            <button class="submenu-button col-xs-2" type="submit" name="typeSearch" value="PPE">PPE</button>
            <button class="submenu-button col-xs-2" type="submit" name="typeSearch" value="Essentials">Essentials</button>
            <button class="submenu-button col-xs-2" type="submit" name="typeSearch" value="Pharmaceutical">Pharmaceutical</button>
            <button class="submenu-button col-xs-2" type="submit" name="typeSearch" value="Other">Other</button>
        </form> <br><br>
    </div>

    <div class="row store-content">
        <ul id="product-list">
            <!-- Section for displaying messages -->
            {{#each products}}
            <li class="store-list col-sm-2 col-xs-3">
                <img src="assets/imgs/store/{{this.image}}" alt={{this.name}} width="100%" height="150px"> 
                <p>{{this.name}}</p>
                <p>Seller: {{this.seller}}</p>
                <p>Price: ${{this.cost}}</p>
                <form action="/add-to-cart" method="POST"><button name="id" value="{{this.product_id}}">Add to Cart</button></form>
            </li>
            {{/each}}
        </ul>
    </div>

</div>

</section>